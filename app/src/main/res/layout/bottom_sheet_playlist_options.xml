<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bottom_sheet_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="128dp"
    android:background="@drawable/bottom_sheet_top_corve"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/container"
        android:layout_marginTop="24dp"
        android:layout_marginStart="12dp"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivTrack"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvName"
            style="@style/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="9dp"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:maxLines="1"
            android:textFontWeight="400"
            android:textSize="16sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toTopOf="@id/tvCountTracksOnDialod"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/ivTrack"
            app:layout_constraintTop_toTopOf="@id/ivTrack"
            tools:text="Best songs 2021" />

        <TextView
            android:id="@+id/tvCountTracksOnDialod"
            style="@style/tv_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:maxLines="1"
            android:textSize="11sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@id/ivTrack"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/ivTrack"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            tools:text="98 треков" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView style="@style/base_tv_style"
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginStart="16dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_medium"
        android:text="Поделиться"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container" />

    <TextView style="@style/base_tv_style"
        android:id="@+id/editButton"
        android:layout_marginTop="29dp"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_medium"
        android:text="Редактировать информацию"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shareButton" />

    <TextView style="@style/base_tv_style"
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginStart="16dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_medium"
        android:text="Удалить плейлист"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>
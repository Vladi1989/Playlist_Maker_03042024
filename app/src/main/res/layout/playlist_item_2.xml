<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingHorizontal="13dp"
    android:layout_height="61dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivTrack"
        android:layout_width="45dp"
        android:layout_height="45dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvName"
        style="@style/tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginTop="14dp"
        android:layout_marginStart="56dp"
        android:fontFamily="@font/ys_display_regular"
        android:maxLines="1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="string string string string string string string string string string string string string string string string string string string string string string string string string string string " />
    <TextView
        style="@style/tv_text2"
        android:id="@+id/tvNameArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintStart_toEndOf="@id/ivTrack"
        android:fontFamily="@font/ys_display_regular"
        android:layout_marginTop="2dp"
        android:textSize="11sp"
        tools:text="12332112332112332111231233211233123123321123321123321"
        android:layout_marginStart="56dp"
        android:ellipsize="end"
        android:maxLines="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>